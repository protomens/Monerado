<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="#A3222121" />
            <corners android:bottomRightRadius="15dp"
                android:bottomLeftRadius="15dp"
                android:topRightRadius="15dp"
                android:topLeftRadius="15dp"/>
            <gradient
                android:startColor="#9444"
                android:endColor="@color/monerado"
                android:type="linear"
                android:angle="45"> <!-- Change this value to have the correct shadow angle, must be multiple from 45 -->
            </gradient>

        </shape>
    </item>
    <item android:right="10dp"  android:left="10dp" android:bottom="10dp" android:top="10dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/alphadarkgrey"/>
            <corners android:bottomRightRadius="15dp"
                android:bottomLeftRadius="15dp"
                android:topRightRadius="15dp"
                android:topLeftRadius="15dp"/>


        </shape>
    </item>
</layer-list>
