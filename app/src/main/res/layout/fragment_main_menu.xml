<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundm">

    <LinearLayout
        android:id="@+id/llqstats"
        android:layout_width="300sp"
        android:layout_height="120sp"
        android:background="@drawable/llmmbgshadow"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llicons"
        android:elevation="20sp">

        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MO_HEADER"
            android:textAlignment="center"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:id="@+id/llstats"
            android:layout_width="300sp"
            android:layout_height="15sp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:elevation="20sp"
            android:weightSum="2.2">

            <TextView
                android:id="@+id/textViewMiners"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Miners:"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/tv_noOfMiner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="null"
                android:layout_weight=".4"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="10dp"
                />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/llstats2"
        android:layout_width="300sp"
        android:layout_height="15sp"
        android:orientation="horizontal"
        android:elevation="20sp"
        android:weightSum="2.2">
        <TextView
            android:id="@+id/textViewXMXRPrice"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="XMR (USD):"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/tv_xmrprice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:layout_weight=".4"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="10dp"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/llwokerinfo"

            />
            <LinearLayout
        android:id="@+id/llstats3"
        android:layout_width="300sp"
        android:layout_height="15sp"
        android:orientation="horizontal"
        android:elevation="20sp"
        android:weightSum="2.2">
        <TextView
            android:id="@+id/textViewMyHashrate"
            android:layout_width="0dp"
            android:layout_marginStart="10dp"

            android:layout_height="wrap_content"
            android:text="Your Hashrate (Raw / Pay):"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/tv_myhashrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="null"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="10dp"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/llstats4"
            android:layout_width="300sp"
            android:layout_height="15sp"
            android:orientation="horizontal"
            android:elevation="20sp"
            android:weightSum="2.2">
            <TextView
                android:id="@+id/textViewTotalPayout"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"

                android:layout_height="wrap_content"
                android:text="XMR Payout:"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/tv_totalxmr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="null"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llstats5"
            android:layout_width="300sp"
            android:layout_height="15sp"
            android:orientation="horizontal"
            android:elevation="20sp"
            android:weightSum="2.2">
            <TextView
                android:id="@+id/textViewPendingPayout"
                android:layout_width="0dp"
                android:layout_marginStart="10dp"

                android:layout_height="wrap_content"
                android:text="XMR Pending:"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/tv_pendingxmr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="null"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="10dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llicons"
        android:layout_width="300sp"
        android:layout_height="240sp"
        android:background="@drawable/llmmbgshadow"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20sp">

    <LinearLayout
        android:id="@+id/lliconsh"
        android:layout_width="300sp"
        android:layout_height="80sp"
        android:background="#00222121"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="2.2"
        >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="0sp"
            android:layout_marginTop="10sp"
            android:clickable="true"
            android:layout_weight="1.1"
            app:srcCompat="@drawable/monerologo" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10sp"
            android:clickable="true"
            android:layout_weight="1.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:srcCompat="@drawable/monero_worker" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llicontext"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:background="#00222121"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="2.2"
        >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="98sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="General &amp; Payment Infos"
            android:layout_weight="1.1"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="98sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1.1"
            android:textAlignment="center"
            android:text="Worker Stats"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lliconsh2"
        android:layout_width="300sp"
        android:layout_height="70sp"
        android:layout_marginTop="10sp"
        android:background="#00222121"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="2.2"
        >
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:clickable="true"
            android:layout_marginBottom="70sp"
            android:layout_weight="1.1"
            app:srcCompat="@drawable/monero_block" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_weight="1.1"
            android:clickable="true"
            app:srcCompat="@drawable/remrig_icon" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/llicontext2"
        android:layout_width="300sp"
        android:layout_height="40sp"
        android:background="#00222121"
        android:gravity="start"
        android:orientation="horizontal"
        android:weightSum="2.2"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="98sp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1.1"
            android:textAlignment="center"
            android:text="Block Payments" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="98sp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Remrig"
            android:layout_weight="1.1"
             />

    </LinearLayout>
    </LinearLayout>









    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="74dp"
        android:layout_height="66dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:srcCompat="@drawable/warriorv" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingRefreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#FFC107"
        app:srcCompat="@android:drawable/ic_menu_rotate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>