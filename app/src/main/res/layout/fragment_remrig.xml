<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/backgroundm">
    <LinearLayout
        android:id="@+id/llworkername"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20dp"
        android:background="#A3222121"
        android:gravity="top"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:weightSum="2.2">

        <TextView
            android:id="@+id/textviewWorker"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:hint="Worker:"
            android:textColorHint="@color/white"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/et_workername"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:hint="Ryzen 5 No 2"
            android:textColorHint="@color/lblue"
            android:textAlignment="textStart"
            android:layout_gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llworkerhint"
        android:layout_width="match_parent"
        android:layout_height="15sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="130dp"
        android:background="#A3222121"
        android:gravity="top"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/llworkername"
        android:weightSum="2.2">

        <TextView
            android:id="@+id/textviewWorkerHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5sp"
            android:layout_weight="2.2"
            android:hint="This is the same as your Monero Ocean password. It must be exact for things to work!"
            android:textAlignment="textStart"
            android:textColor="#595555"
            android:textColorHint="@color/white"
            android:textSize="10sp"
            android:textStyle="italic"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lladdremote"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="130dp"
        android:background="#A3222121"
        android:gravity="top"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/llworkerhint"
        android:weightSum="2.2">

        <EditText
            android:id="@+id/et_remrig"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:hint="https://address:port"
            android:textColorHint="@color/lblue"
            android:textAlignment="textStart"
            android:layout_gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/imageViewActionRemrig"
            android:layout_width="0dp"
            android:layout_height="55sp"
            android:layout_gravity="center"
            android:layout_marginTop="2sp"
            android:layout_weight=".6"
            android:clickable="true"
            app:srcCompat="@drawable/start" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llup"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="13dp"
        android:background="#A3222121"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/lladdremote"
        android:weightSum="2.2">
    <LinearLayout
        android:id="@+id/lluser"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginTop="13dp"
        android:background="#A3222121"
        android:gravity="top"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/lladdremote"
        android:weightSum="2.2">
        <TextView
            android:id="@+id/textviewUsername"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:hint="Username:"
            android:textColorHint="@color/white"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:hint="xmrig"
            android:textColorHint="@color/lblue"
            android:textAlignment="textStart"
            android:layout_gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llpass"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginTop="13dp"
        android:background="#A3222121"
        android:gravity="top"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/lluser"
        android:weightSum="2.2">
        <TextView
            android:id="@+id/textviewPassword"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:hint="Password:"
            android:textColorHint="@color/white"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:hint="eVR5m#"
            android:textColorHint="@color/lblue"
            android:textAlignment="textStart"
            android:layout_gravity="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:layout_constraintBottom_toTopOf="@+id/llworkername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/remrig" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:id="@+id/workerList"
        android:layout_marginTop="15sp"
        app:layout_constraintTop_toBottomOf="@+id/llup"
        />
</androidx.constraintlayout.widget.ConstraintLayout>