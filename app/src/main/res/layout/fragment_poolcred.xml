<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundm">

    <LinearLayout
            android:id="@+id/llpool"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:orientation="horizontal"
            android:gravity="top"
            android:background="#A3222121"
            android:weightSum = "2.2"
        tools:ignore="MissingConstraints"

        >
            <TextView
                android:id="@+id/textViewPoolName"
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:layout_height="wrap_content"
                android:text="POOL"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp"
                />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/llcred"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal"
        android:gravity="top"
        android:layout_margin="10dp"
        android:background="#A3222121"
        android:weightSum = "2.2"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/llpool"


        >
        <EditText
            android:id="@+id/et_address"
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:layout_height="wrap_content"
            android:hint="ADDRESS"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llcred2"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal"
        android:gravity="top"
        android:background="#A3222121"
        android:weightSum = "2.2"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/llcred"


        >
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_weight="2.2"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            android:hint="PASSWORD"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>